<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="160dp"
        android:padding="@dimen/common_ui_padding_small"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvPizzaName"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="@dimen/common_ui_padding_extra_small"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/primaryTextLight"
            tools:text="Pepperoni"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_margin="@dimen/common_ui_padding_extra_small"
            android:src="@drawable/ic_pizza"/>

        <TextView
            android:id="@+id/tvPizzaPrize"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/common_ui_padding_small"
            android:paddingStart="@dimen/common_ui_padding_small"
            android:layout_marginTop="@dimen/common_ui_padding_extra_small"
            android:textColor="@color/primaryTextLight"
            tools:text="12.00$"/>

        <Button
            android:id="@+id/btnConfirmPizzaSelection"
            style="@style/AccentButtonStyle"
            android:layout_width="match_parent"
            android:textSize="13sp"
            android:layout_margin="@dimen/common_ui_padding"
            android:layout_height="@dimen/btn_height_small"
            android:capitalize="words"
            android:text="@string/text_order_this"/>
    </LinearLayout>
</android.support.v7.widget.CardView>