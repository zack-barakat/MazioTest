<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@color/colorShadow"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        android:layout_margin="@dimen/common_ui_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/common_ui_padding">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="@string/text_order_summary"/>

            <TextView
                android:id="@+id/tvPizzaName"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/common_ui_padding_medium"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                tools:text="Mozzarella"/>

            <TextView
                android:id="@+id/tvPizzaPrice"
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_ui_padding_medium"
                android:textColor="@color/colorAccent"
                tools:text="20 $"/>

            <Button
                android:id="@+id/btnOpenPizzasMenu"
                style="@style/AccentRoundedButtonStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/common_ui_padding_large"
                android:layout_marginBottom="@dimen/common_ui_padding"
                android:layout_height="wrap_content"
                android:text="@string/text_go_to_pizzas_menu"
            />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
