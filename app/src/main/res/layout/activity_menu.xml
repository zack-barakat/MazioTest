<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvPizzas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:itemCount="4"
        tools:spanCount="2"
        tools:layoutManager="android.support.v7.widget.GridLayoutManager"
        tools:listitem="@layout/item_pizza"/>

    <Button
        android:id="@+id/btnConfirmSelection"
        android:layout_width="match_parent"
        style="@style/AccentButtonStyle"
        android:layout_marginTop="@dimen/common_ui_padding"
        android:text="@string/text_order_customized_pizza"
        android:layout_height="@dimen/btn_height_medium"/>

</LinearLayout>